    /*!
     *  分发端口号
     */
    "serverPort"    : 8080,
    /*！
     *  session过去时间
     */
    "sessionMaxAge"     : 1200000 ,
    /*!
     *  业务分发hash（别名）
     */
    "busHandlers"       : {
        "index"         : "index"
    } ,
    /*!
     *  redis相关存放
     */
    "redis"             : {
        "host"    : "127.0.0.1" ,
        "port"    : "6379" ,
        "pass"    : "123456"
    }
}