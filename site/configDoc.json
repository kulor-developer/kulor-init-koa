{
    "appName"           : "koa-app",
    /*!
     *  是否开启debug模式
     */
    "debug"             : true , 
    /*!
     *  是否是移动应用
     *  如果为移动应用 将提供分辨率相关内容
     */
    "isMobile"          : false ,
    /*!
     *  jade模板目录名
     */
    "jadeFolderName"    : "../src/jadeFiles",
    /*!
     *  日志目录
     */
